@model Item

<form asp-action="Update" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="UserId" />
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <h2>Update Item</h2>

            <div class="form-group mb-2">
                <label asp-for="Name"></label><span class="text-danger">*</span>
                <span asp-validation-for="Name" class="text-danger float-end"></span>
                <input asp-for="Name" class="form-control" />
            </div>
            <div class="form-group mb-2">
                <label asp-for="Location"></label><span class="text-danger">*</span>
                <span asp-validation-for="Location" class="text-danger float-end"></span>
                <select asp-for="Location" class="form-select">
                    <option value="" selected disabled hidden>Choose a county</option>
                    <option value="Agder">Agder</option>
                    <option value="Innlandet">Innlandet</option>
                    <option value="Møre og Romsdal">Møre og Romsdal</option>
                    <option value="Nordland">Nordland</option>
                    <option value="Oslo">Oslo</option>
                    <option value="Rogaland">Rogaland</option>
                    <option value="Troms og Finnmark">Troms og Finnmark</option>
                    <option value="Trøndelag">Trøndelag</option>
                    <option value="Vestfold og Telemark">Vestfold og Telemark</option>
                    <option value="Vestland">Vestland</option>
                    <option value="Viken">Viken</option>
                </select>
            </div>
            <div class="form-group mb-2">
                <label asp-for="PricePerNight">Price per night</label><span class="text-danger">*</span>
                <span asp-validation-for="PricePerNight" class="text-danger float-end"></span>
                <input asp-for="PricePerNight" class="form-control" />
            </div>
            <div class="form-group mb-2">
                <label asp-for="Capacity">Capacity of guests</label><span class="text-danger">*</span>
                <span asp-validation-for="Capacity" class="text-danger float-end"></span>
                <input asp-for="Capacity" class="form-control" />
            </div>
            <div class="form-group mb-4">
                <label asp-for="Description"></label><span class="text-danger">*</span>
                <span asp-validation-for="Description" class="text-danger float-end"></span>
                <textarea asp-for="Description" class="form-control" rows="10" id="description" onkeyup="charCount()"></textarea>
                <span class="float-end" id="descriptionCounter">(Max characters: @Model.Description.Length / 5000)</span>
            </div>

            <div class="form-group mb-4">
                <label>Current image: </label>
                <img src="@Model.ImageUrl" alt="Current Image" width="200" />
                <span class="text-danger">@ViewData["FileError"]</span>
                <div>
                    <input class="bg-white border rounded w-100" type="file" name="file" />
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Update</button>
            <button onclick="event.preventDefault(); history.back();" class="btn btn-secondary">Cancel</button>
        </div>
    </div>
</form>

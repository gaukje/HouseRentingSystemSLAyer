@{
    ViewData["Title"] = "Logg Inn";
}
<h1>@ViewData["Title"]</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form>
                <div class="form-group">
                    <label for="brukernavn"><b>Brukernavn:</b></label>
                    <input type="text" class="form-control" placeholder="Skriv inn brukernavn" name="brukernavn" id="brukernavn" required>
                </div>
                <div class="form-group">
                    <label for="passord"><b>Passord:</b></label>
                    <input type="password" class="form-control" placeholder="Skriv inn passord" name="passord" id="passord" required>
                </div>
                <div class="form-group form-check">
                    <input type="checkbox" class="form-check-input" checked="checked" name="remember" id="remember">
                    <label class="form-check-label" for="husk">Husk meg</label>
                </div>
                <button type="submit" class="btn btn-primary">Logg inn</button>
            </form>
            <p class="mt-3">Har du ikke en profil? <a class="text-dark" asp-area="" asp-controller="Account" asp-action="Registrer">Registrer deg her</a></p>
        </div>
    </div>
</div>

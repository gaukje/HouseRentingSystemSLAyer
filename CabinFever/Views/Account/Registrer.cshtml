@{
    ViewData["Title"] = "Registrer deg";
}
<h1>@ViewData["Title"]</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-controller="Account" asp-action="Registrer" method="post">
                <div class="form-group">
                    <label for="fornavn"><b>Fornavn:</b></label>
                    <input type="text" class="form-control" placeholder="Skriv inn fornavn" name="fornavn" id="fornavn" required>
                </div>
                <div class="form-group">
                    <label for="etternavn"><b>Etternavn:</b></label>
                    <input type="text" class="form-control" placeholder="Skriv inn etternavn" name="etternavn" id="etternavn" required>
                </div>
                <div class="form-group">
                    <label for="brukernavn"><b>Brukernavn:</b></label>
                    <input type="text" class="form-control" placeholder="Skriv inn brukernavn" name="brukernavn" id="brukernavn" required>
                </div>
                <div class="form-group">
                    <label for="epost"><b>E-post:</b></label>
                    <input type="email" class="form-control" placeholder="Skriv inn e-post" name="epost" id="epost" required>
                </div>
                <div class="form-group">
                    <label for="passord"><b>Passord:</b></label>
                    <input type="password" class="form-control" placeholder="Skriv inn passord" name="passord" id="passord" required>
                </div>
                <div class="form-group">
                    <label for="bekreftPassord"><b>Bekreft passord:</b></label>
                    <input type="password" class="form-control" placeholder="Bekreft passord" name="bekreftPassord" id="bekreftPassord" required>
                </div>
                <button type="submit" class="btn btn-primary">Registrer</button>
            </form>
            <p class="mt-3">Har du allerede en profil? <a class="text-dark" asp-area="" asp-controller="Account" asp-action="LoggInn">Logg inn her</a></p>
        </div>
    </div>
</div>


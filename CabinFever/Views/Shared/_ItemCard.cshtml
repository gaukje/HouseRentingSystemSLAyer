@model Item

<div class="col">
    <div>
        <a asp-controller="Item"
        asp-action="Details"
        asp-route-id="@Model.Id">
        <img src="@Model.ImageUrl" class="card-img-top" alt="@Model.Name">
        </a>
        <div>
            <div class="d-flex justify-content-between mt-2">
                <h5 class="text-start">
                    <a asp-controller="Item"
                       asp-action="Details"
                       asp-route-id="@Model.Id">@Model.Name</a>
                </h5>
                <h5 class="text-nowrap">
                    @Model.PricePerNight.ToString("0.00 NOK")
                </h5>
            </div>
            <p>
                <a class="btn btn-secondary"
                   asp-controller="Item"
                   asp-action="Create"> Create new post</a>
            </p>
        </div>
    </div>
</div>


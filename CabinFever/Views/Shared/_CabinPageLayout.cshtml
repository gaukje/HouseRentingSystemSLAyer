@model Item

<div class="container my-4">
    <div class="row">
        <div class="col-lg-8">
            <h1>@Model.Name</h1>
            <p>@Model.Description</p>
            <p><strong>Location:</strong> @Model.Location</p>
            <p><strong>Price per night:</strong> @Model.PricePerNight.ToString("0.00 NOK")</p>
        </div>
        <div class="col-lg-4">
            <div class="sticky-box position-sticky top-0">
                <h2>@Model.PricePerNight.ToString("0.00 NOK")</h2>
                <div class="form-group mb-4">
                    <label asp-for="FromDate">From Date:</label>
                    <input asp-for="FromDate" id="datepicker" class="form-control" />
                </div>
                <div class="form-group mb-4">
                    <label asp-for="ToDate">To Date:</label>
                    <input asp-for="ToDate" id="datepicker" class="form-control" />
                </div>
                @*
                <div class="form-group mb-4">
                    <label for="guests">Number of Guests:</label>
                    <input type="number" id="guests" class="form-control" min="1" value="1" />
                </div>
                *@
                <button id="bookButton" class="btn btn-primary">Book Cabin</button>
            </div> 
        </div>
    </div>
</div>

<div class="container text-center">
    <div class="row">
        <div class="col-md-4 mb-4">
            <img src="@Model.ImageUrl" alt="@Model.Name" class="img-fluid rounded" />
        </div>
    </div>
</div>



@model IEnumerable<Order>

@if (Model.Any())
{
    <table>
        <thead>
            <tr>
                <th>Order ID</th>
                <th>Order Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.OrderId</td>
                    <td>@order.OrderDate</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No order history to display</p>
}